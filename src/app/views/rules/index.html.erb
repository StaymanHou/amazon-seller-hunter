<p id="notice"><%= notice %></p>

<h1>Listing Rules</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Enabled</th>
      <th>Settings</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @rules.each do |rule| %>
      <tr>
        <td><%= rule.name %></td>
        <td><%= rule.enabled %></td>
        <td><%= rule.settings %></td>
        <td><%= link_to 'Modify', edit_rule_path(rule), class: 'btn btn-default btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

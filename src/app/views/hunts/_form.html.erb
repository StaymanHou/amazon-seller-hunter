<%= form_for(@hunt) do |f| %>
  <% if @hunt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hunt.errors.count, "error") %> prohibited this hunt from being saved:</h2>

      <ul>
      <% @hunt.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :isbn, 'ISBN' %><br>
    <%= f.text_field :isbn %>
  </div>
  <div class="field">
    <%= f.label :condition %><br>
    <%= f.select :condition, Hunt.conditions.keys.to_a.map { |w| [w.humanize, w] } %>
  </div>
  <div class="actions">
    <%= f.submit 'Start', class: 'btn btn-primary' %>
  </div>
<% end %>
